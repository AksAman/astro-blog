---
type Props = {
  tags: string[];
};

const { tags } = Astro.props;
---

<div class="flex gap-2 mb-10">
  {
    tags.map((tag) => {
      return (
        <a
          class="bg-gray-200 text-blue-600 rounded-full text-xs px-2 py-1"
          href={`/tags/${tag}`}
        >
          {tag}
        </a>
      );
    })
  }
</div>
