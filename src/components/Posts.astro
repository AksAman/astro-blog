---
import type { getCollection } from "astro:content";

type Props = {
  posts: Awaited<ReturnType<typeof getCollection>>;
};

const { posts } = Astro.props;
---

{
  posts.map((post) => {
    return (
      <a class="hover:underline text-blue-500" href={`/posts/${post.slug}`}>
        {post.data.title}
      </a>
    );
  })
}
