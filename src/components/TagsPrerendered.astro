---
import Tags from "@/components/Tags.astro";
import type { Frontmatter } from "@/types/frontmatter";
const posts = await Astro.glob<Frontmatter>("../pages/posts/*.md");

const tags = [
  ...new Set(
    posts
      .map((p) => {
        return p.frontmatter.tags;
      })
      .flat()
  ),
];
---

<Tags tags={tags} />
