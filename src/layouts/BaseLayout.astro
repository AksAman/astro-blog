---
type Props = {
  pageTitle?: string;
};
import Footer from "@/components/Footer.astro";
import Header from "@/components/Header.astro";
import { TailwindIndicator } from "@/components/react/TailwindIndicator";
import { ViewTransitions } from "astro:transitions";

import "@/styles/globals.css";

const { pageTitle } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content="Astro tutorial page" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle || "Astro Blog"}</title>
    <ViewTransitions />
  </head>
  <body class="flex flex-col min-h-[100dvh]">
    <Header />
    <h1 transition:animate="slide" class="p-4">
      {pageTitle}
    </h1>
    <div
      class="flex flex-col m-auto items-center justify-center flex-grow h-full w-full"
    >
      <slot />
    </div>
    <Footer />
    <TailwindIndicator />
  </body>
</html>
