---
import Navigation from "@/components/Navigation.astro";
type Blog = {
  title: string;
  href: string;
};

const blogs: Blog[] = [
  {
    title: "Post 1",
    href: "/posts/post-1",
  },
  {
    title: "Post 2",
    href: "/posts/post-2",
  },
  {
    title: "Post 3",
    href: "/posts/post-3",
  },
];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro | My blog</title>
  </head>
  <body class="flex flex-col min-h-screen">
    <Navigation />
    <div
      class="flex flex-col m-auto items-center justify-center flex-grow h-full border w-full"
    >
      <h1 class="text-3xl font-bold">My blog</h1>
      {
        blogs.map((b) => {
          return <a href={b.href}>{b.title}</a>;
        })
      }
    </div>
  </body>
</html>
