---
import BaseLayout from "@/layouts/BaseLayout.astro";
type Blog = {
  title: string;
  href: string;
};

const blogs: Blog[] = [
  {
    title: "Post 1",
    href: "/posts/post-1",
  },
  {
    title: "Post 2",
    href: "/posts/post-2",
  },
  {
    title: "Post 3",
    href: "/posts/post-3",
  },
];

const pageTitle = "My blog";
---

<BaseLayout pageTitle={pageTitle}>
  <h1 class="text-3xl font-bold">My blog</h1>
  {
    blogs.map((b) => {
      return <a href={b.href}>{b.title}</a>;
    })
  }
</BaseLayout>
